<% if @found %>
   <h1>Change role to Student</h1>
 <% else %>
   <h1>New Student</h1>
 <% end %>

<%= flash[:notice] %>
<%= start_form_tag :action => 'create_student' %>
  <%= render :partial => 'users/user' %>
  <% if @found %>
   <%= submit_tag "Save", :name=>"save" %>
 <% else %>
   <%= submit_tag "Create" %>
 <% end %>
<%= end_form_tag %>

<br />
<%= link_to 'Back', :action => 'list_students' %>