<% if @assignment.review_allowed or @assignment.get_current_stage == "Complete" %>
<h3>Reviews for <%= @assignment.name %></h3>
<%= render :partial => 'reviews' %>
<% else %>
<h3>Reviews cannot be performed at this time</h3>
<% end %>
<BR/>
<% if @assignment.metareview_allowed or @assignment.get_current_stage == "Complete" %>
  <h3>Metareviews for <%= @assignment.name %></h3>
  <%= render :partial => 'metareviews' %>
<% else %> 
  <h3>Metareviews cannot be performed at this time</h3>
<% end %>
<BR/>
